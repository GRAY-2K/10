rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Debug rule - allow all reads to admins collection
    match /admins/{document=**} {
      allow read: if true;  // Temporarily allow all reads for testing
      allow write: if false;
    }
    
    // Rules for pending users collection
    match /pendingUsers/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null;
      allow delete: if request.auth != null && isAdmin();
    }
    
    // Rules for approved users collection
    match /approvedUsers/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
    
    // Admin check function
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/config) &&
             request.auth.uid in get(/databases/$(database)/documents/admins/config).data.adminUsers;
    }
  }
} 
