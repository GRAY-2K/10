rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading admins collection for authenticated users
    match /admins/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;  // Only allow writes through admin console
    }
    
    // Rules for pending users collection
    match /pendingUsers/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null;
      allow delete: if request.auth != null && isAdmin();
    }
    
    // Rules for approved users collection
    match /approvedUsers/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
    
    // Admin check function
    function isAdmin() {
      let adminDoc = get(/databases/$(database)/documents/admins/config);
      return request.auth != null && 
             adminDoc != null && 
             adminDoc.data != null && 
             adminDoc.data.adminUsers != null &&
             request.auth.uid in adminDoc.data.adminUsers;
    }
  }
} 
